{
  "name": "kd-pixel-panel",
  "displayName": "KD Pixel Panel",
  "description": "Native IDE panel for KD observer events.jsonl",
  "version": "0.1.0",
  "publisher": "krackeddevs",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:kdPixel.panelView",
    "onCommand:kdPixel.openPanel",
    "onCommand:kdPixel.refreshPanel"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kdPixel.openPanel",
        "title": "KD Pixel: Show Panel"
      },
      {
        "command": "kdPixel.refreshPanel",
        "title": "KD: Refresh Pixel Observer Panel"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "kdPixel-panel",
          "title": "KD Pixel",
          "icon": "$(window)"
        }
      ]
    },
    "views": {
      "kdPixel-panel": [
        {
          "type": "webview",
          "id": "kdPixel.panelView",
          "name": "Pixel Observer"
        }
      ]
    },
    "configuration": {
      "title": "KD Pixel Panel",
      "properties": {
        "kdPixel.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically focus KD Pixel panel after startup if a KD workspace is detected."
        },
        "kdPixel.eventsPath": {
          "type": "string",
          "default": ".kracked/runtime/events.jsonl",
          "description": "Path to KD events stream (absolute or workspace-relative)."
        },
        "kdPixel.refreshIntervalMs": {
          "type": "number",
          "default": 1500,
          "minimum": 500,
          "maximum": 10000,
          "description": "Polling interval in milliseconds."
        }
      }
    }
  }
}
